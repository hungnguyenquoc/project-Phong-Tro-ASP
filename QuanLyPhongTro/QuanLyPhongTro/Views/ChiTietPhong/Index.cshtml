
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/chiTietPhong.css" rel="stylesheet" />

@* BEGIN CAROUSEL DETAIL IMAGE ROOM *@
<div id="myCarousel" class="carousel slide" data-ride="carousel" style="padding-top: 5%;">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" style="width: 80%; margin: auto;">
        <div class="item active">
            <img src="~/Assets/img/pt5.jpg" alt="Los Angeles" style="width: 100%; height: 400px;">
        </div>

        <div class="item">
            <img src="~/Assets/img/pt6.jpg" alt="Chicago" style="width: 100%; height: 400px;">
        </div>

        <div class="item">
            <img src="~/Assets/img/pt7.jpg" alt="New York" style="width: 100%; height: 400px;">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev" style="margin: 10%;">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next" style="margin: 10%;">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

@* END CAROUSEL DETAIL IMAGE ROOM *@
@* BEGIN ROOM CONTENT *@
<section class="room-content">
    <div class="col-md-8">
        <div class="container">
            <div class="row">
                <div class="col-md-8 room-content-title">
                    <span>Tìm người thuê 4 nam</span>
                    <h1>Phòng Sinh Viên Quận 7</h1>
                    <span class="price-room"><i class="glyphicon glyphicon-modal-window"></i> Giá Phòng: 2.000.000 VNĐ</span>
                    <br />
                    <span class="price-room"><i class="glyphicon glyphicon-map-marker"></i> Địa Chỉ: 456 Huỳnh Tấn Phát</span>
                    <div class="room-detail-line"></div>
                    <h3>Tiện ích:</h3>
                    <p class="price-room"><i class="glyphicon glyphicon-bed"></i> Giường Ngủ</p>
                    <p class="price-room"><i class="glyphicon glyphicon-shopping-cart"></i> Gần Siêu Thị</p>
                    <p class="price-room"><i class="glyphicon glyphicon-time"></i> Thời Gian Tự Do</p>
                    <p class="price-room"><i class="glyphicon glyphicon-globe"></i> Internet</p>
                    <div class="col-md-8">
                        <h3>Mô tả:</h3>
                        <span>
                            Phòng mới xây giá rẻ dạng căn hộ mi ni. Đủ nội thất cao cấp. Ngay tại sân bay chỉ 5p ra công viên gia định và 5p ra sân bay
                            - Thích hợp cặp vợ chồng, nhân viên văn phòng, ở và buôn bán online
                            - thiết kế hiện đại mỗi phòng có thiết kế khác nhau
                            Khu nhà biệt thự . Toàn tiếp viên ở , tiện ích xung quanh . Rạp phim . Công viên, siêu thị parkson ,...phòng gym....yoga
                        </span>
                    </div>
                    <button class="btn btn-success"><i class="glyphicon glyphicon-registration-mark"></i>Đăng ký phòng</button>
                </div>
            </div>
        </div>
    </div>
</section>

@* END ROOM CONTENT *@
@* FOOTER *@
<div class="col-md-12 footer" >
    <div class="container">
        <div class="footer-content" >
            <span >renthouse.com.vn</span>
        </div>
    </div>
</div>
